<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
</head>
<body>
<div class="container">
  <% delstep = typeof delstep !== 'number' ? 0 : delstep %>

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>

        <a href="/chat" target="_blank" class="btn btn-default btn-sm">Chat</a>
        <a href="/" class="btn btn-default"><span class="fa fa-user"></span> Home</a>
        <a href="/logout" class="btn btn-default"><span class="fa fa-user"></span> Logout</a>

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <% if (delstep > 0) { %>
        <form action="/profile" method="post">
            <button type="submit" name="change_deleteaccount<%= delstep %>" class="btn btn-warning btn-lg">Yes</button>
            <button type="submit" name="change_nothing" class="btn btn-warning btn-lg">No</button>
        </form>
        <% } %>

    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                  <p>
                      <strong>primary name</strong>: <%= user.username %><br>
                      <strong>email</strong>: <%= user.email %><br>
                      <strong>display name</strong>: <%= user.displayname %><br>
                  </p>
                  <p>
                      <form action="/profile" method="post">
                          <div class="form-group">
                              <label>Display Name</label>
                              <input type="text" class="form-control" name="displayname">
                          </div>
                          <button type="submit" name="change_displayname" class="btn btn-warning btn-lg">Change Name</button>
                          <br>
                          <button type="submit" name="change_deleteaccount<%= delstep %>" class="btn btn-warning btn-lg">Delete Account</button>
                      </form>
                  </p>

            </div>
        </div>

    </div>
    <script src="/js/heartbeat.js"></script>

</div>
</body>
</html>
